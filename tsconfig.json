{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "./dist",
      "types": [
        "node"
      ],
      "typeRoots": [
        "typings",
        "node_modules/@types"
      ]
    },
    "include": [
      "src/**/*",
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }